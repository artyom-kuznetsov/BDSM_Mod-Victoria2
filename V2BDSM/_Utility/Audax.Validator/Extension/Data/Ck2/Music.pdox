(Validator Music) = {
	Type = Default
	FriendlyName = "Music"
	(FileGroup "music\songs.txt")
	ValidatorName = SongFile
}

(Type SongFile) = {
	(Ch N Y) = { Left = "song" Right = SongDef }
}

(Type SongDef) = {
	Single = {
		Left = "name"
		Right = String
		UniqueId = Right
		FileExists = {
			Target = "[R]"
			Path = "music\*"
		}
	}
	
	Single = { Left = "song_name" Right = String }
	Single = { Left = "chance" Right = CharFactorWeight }
	Optional = { Left = "volume" Right = Double }
}








